@using System.IdentityModel.Tokens.Jwt;
@using System.Security.Claims;
@inject IHttpContextAccessor Accessor
@{
    var jwtHandler = new JwtSecurityTokenHandler();
    string role = "nothing";
    if (Accessor.HttpContext.Session.GetString("Token") != null)
    {
        var tokenContent = jwtHandler.ReadToken(Accessor.HttpContext.Session.GetString("Token")) as JwtSecurityToken;
        role = tokenContent.Claims.First(claim => claim.Type == ClaimTypes.Role).Value;
    }
    //var email = tokenContent.Claims.First(claim => claim.Type == "email").Value;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Practice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="http://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Practice.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Practice</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            @if (role == "user" || role == "admin")
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="People" asp-action="Index">Table people</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (role == "admin")
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pair" asp-action="Index">Table pairs</a>
                            }
                        </li>
                        <li class="nav-item log-out">
                            @if (role == "user" || role == "admin")
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="LogInPerson" asp-action="LogOutPerson">Log out</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Practice
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
