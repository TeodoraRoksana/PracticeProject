@using System.IdentityModel.Tokens.Jwt;
@using System.Security.Claims;
@inject IHttpContextAccessor Accessor

@{
    var jwtHandler = new JwtSecurityTokenHandler();
    string role = "nothing";
    if (Accessor.HttpContext.Session.GetString("Token") != null)
    {
        var tokenContent = jwtHandler.ReadToken(Accessor.HttpContext.Session.GetString("Token")) as JwtSecurityToken;
        role = tokenContent.Claims.First(claim => claim.Type == ClaimTypes.Role).Value;
    }
    //var email = tokenContent.Claims.First(claim => claim.Type == "email").Value;
}

@model IEnumerable<Practice.Models.People>

@{
    ViewData["Title"] = "Table people";
}

<div class="table">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                @if (role == "admin")
                {
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                }
                <th>
                    @Html.DisplayNameFor(model => model.Sex)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AboutMe)
                </th>
                @if (role == "admin")
                {
                <th>
                    @Html.DisplayNameFor(model => model.Likes)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dislikes)
                </th>
                <th>
                    Count of meets
                </th>
                <th>
                    
                        <a asp-area="" asp-controller="AddPerson" asp-action="Add">Add new person</a>
                    
                </th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var sum = item.PairFirstPeople.Count() + item.PairSecondPeople.Count();
                var d = item.Birthday.ToString("dd/MM/yyyy");
                var sex = item.Sex == 1 ? "Male" : "Female";
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    @if (role == "admin")
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                    }
                    <td>
                        @sex
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @d
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AboutMe)
                    </td>
                    @if (role == "admin")
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.Likes)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dislikes)
                        </td>
                        <td>
                            @sum
                        </td>
                        <td>

                            <a asp-controller="EditPerson" asp-action="Edit" asp-route-id="@item.PersonId">Edit</a> <br />
                            <a asp-controller="People" asp-action="Delete" asp-route-id="@item.PersonId">Delete</a>

                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
